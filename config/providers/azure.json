{
  "name": "azure",
  "display_name": "Azure AI",
  "enabled": true,

  "api_keys": {
    "env_var_patterns": [
      "AZURE_AI_API_KEY",
      "AZURE_AI_API_KEY_{INDEX}"
    ],
    "description": "Environment variable patterns for API keys. {INDEX} = 1,2,3..."
  },

  "endpoints": {
    "base_url": "${AZURE_AI_ENDPOINT}",
    "completions": "/chat/completions",
    "streaming": "/chat/completions",
    "compatible_format": "azure"
  },

  "authentication": {
    "type": "azure_key",
    "header_name": "Authorization",
    "header_format": "Bearer {api_key}"
  },

  "request_config": {
    "timeout_seconds": 60,
    "max_retries": 3,
    "retry_on_status": [429, 500, 502, 503, 504],
    "default_parameters": {
      "temperature": 1.0,
      "top_p": 1.0,
      "n": 1
    }
  },

  "rate_limiting": {
    "enabled": false,
    "requests_per_minute": null,
    "tokens_per_minute": null
  },

  "proxy_support": {
    "enabled": false,
    "base_url_override": null,
    "description": "If enabled, use base_url_override instead of base_url (for proxies)"
  }
}
